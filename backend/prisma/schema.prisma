generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int        @id @default(autoincrement())
  email      String     @unique
  name       String
  password   String
  categories Category[]

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("users")
}

model New {
  id Int @id @default(autoincrement())

  publishedAt DateTime @map("published_at")
  fetchedAt   DateTime @map("fetched_at")

  articleId   String     @unique @map("article_id")
  title       String
  link        String
  content     String?
  sourceUrl   String     @map("source_url")
  creator     String[]
  imageUrl    String?    @map("image_url")
  description String?
  category    Category[]
  pubDate     DateTime   @map("pub_date")
  pubDateTZ   String     @map("pub_date_tz")

  @@index([publishedAt])
  @@map("news")
}

enum Category {
  BUSINESS
  CRIME
  DOMESTIC
  EDUCATION
  ENTERTAINMENT
  ENVIRONMENT
  FOOD
  HEALTH
  LIFESTYLE
  OTHER
  POLITICS
  SCIENCE
  SPORTS
  TECHNOLOGY
  TOURISM
  TOP
  WORLD
}
